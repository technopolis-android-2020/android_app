<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/list_of_agents_frame"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_of_agents_main_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/list_of_agents_item_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/crocodile"
            app:layout_constraintBottom_toTopOf="@id/list_of_agents_item_tv"
            app:layout_constraintLeft_toLeftOf="@id/list_of_agents_main_frame"
            app:layout_constraintTop_toTopOf="@id/list_of_agents_main_frame" />

        <TextView
            android:id="@+id/list_of_agents_item_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="111"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="@id/list_of_agents_main_frame"
            app:layout_constraintLeft_toLeftOf="@id/list_of_agents_main_frame"
            app:layout_constraintRight_toRightOf="@id/list_of_agents_main_frame"
            app:layout_constraintTop_toBottomOf="@id/list_of_agents_item_iv" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>